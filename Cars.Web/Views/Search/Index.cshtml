@model Cars.Web.Models.SearchViewModel

@{
    ViewBag.Title = "Search";
}

<div class="row">
    <div class="col-md-12">
        <h2>Search cars: </h2>

        <div class="input-group">
            @using (@Ajax.BeginForm("Search", new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "search-results",
                InsertionMode = InsertionMode.Replace
            }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.OwnerId, new { @class = "form-control input-lg", placeholder = "Enter owner ID..." })
                    <br />
                    @Html.ValidationMessageFor(m => m.OwnerId, null, new { @class = "text-danger" })
                </div>

                <button type="submit" value="Search" class="btn btn-primary" id="search">Search</button>
            }
        </div>
    </div>
</div>

<div class="row" id="search-results">
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")  
}